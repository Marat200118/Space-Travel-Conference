---
import { Image } from "astro:assets";
const { talk } = Astro.props;
---
<div class="talk">
  <div class="talk-image">
    {
      talk.attributes.image?.data?.attributes.url &&
      (
      <Image
          src={`${import.meta.env.STRAPI_URL}${
          talk.attributes.image?.data?.attributes.url
        }`}
        alt="Talk image"
        width="450"
        height="600"
        widths={[250, 350, 500, 750]}
        sizes="(max-width: 35em) 70vw, (max-width: 50em) 60vw, 30vw"
      />
      )
    }
    </div>
  <div class="talk-info">
    <h3>{talk.attributes.name}</h3>
    <p class="talk-location">Location: {talk.attributes.location.data.attributes.name}</p>
    <p class="time">Time: {talk.attributes.time}</p>
    <p>{talk.attributes.description}</p>
    <div class="duration-and-language">
      <p class="duration">Duration: {talk.attributes.duration} min</p>
      <p class="language">Language: {talk.attributes.language}</p>
    </div>
    <div class="button">
      <a href={`/talks/${talk.id}`}>Buy Tickets</a>
    </div>
  </div>
</div>

<section class="speaker-info">
    <h3>Speaker</h3>
    <p>{talk.attributes.speaker.data.attributes.name}</p>
    <p>{talk.attributes.speaker.data.attributes.bio}</p>
  </section>


<style>

  .duration-and-language {
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
  }

  .talk {
    height: 100vh;
    display: flex;
    flex-direction: row;
    margin-bottom: 2rem;
    align-items: center;
    justify-content: space-evenly;
  }

  .talk-info {
    max-width: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 2rem;
  }

  .button {
    margin-top: 2rem;
  }

  .button a {
    background-color: var(--color-secondary);
    color: var(--color-primary);
    border: 1px solid var(--color-primary);
    padding: 1rem 3rem;
    text-decoration: none;
    border-radius: 3px;
    font-weight: bold;
    transition: all 0.3s ease-in-out;
  }

  .button a:hover {
    background-color: var(--color-primary);
    color: var(--color-secondary);
    cursor: pointer;
    border: 1px solid var(--color-primary);
  }

</style>







